{% extends "layout.html.twig" %}

{% block body %}
    <div class="page-login">
        <div class="form-auth-card">
            {{ include("partial/appbranding.html.twig") }}
            <div>
                Nie masz konta? <a href="{{ url_for('singup') }}">Załóż konto</a>
            </div>
            <form class="login" method="post" action="{{ url_for('login_submit') }}">
                <label>
                    <span>Adres e-mail</span>
                    <input type="email" maxlength="128" required name="email"/>
                </label>
                <label>
                    <span>Hasło</span>
                    <input type="password" maxlength="128" required name="password"/>
                </label>
                <input type="submit" value="Zaloguj"/>
            </form>
        </div>
    </div>
{% endblock %}
